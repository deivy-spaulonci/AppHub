#!/user/bin/env groovy
pipeline{
    agent none
    stages{
        stage('build'){
            agent{
                docker {
                    image 'maven:3.9.6-eclipse-temurin-21'
                    args '-u root:root'
                }
            }
            steps{
                sh "mvn package -Dmaven.test.skip=true"
            }
       }
    }
}